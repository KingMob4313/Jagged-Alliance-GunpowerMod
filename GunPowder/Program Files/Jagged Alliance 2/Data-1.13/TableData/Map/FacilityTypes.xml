		<fCountEnemiesInWild>1</fCountEnemiesInWild>
		<ubMinimumWisdomForDetection>80</ubMinimumWisdomForDetection>
	</FACILITYTYPE>
	<FACILITYTYPE>
		<ubIndex>10</ubIndex>
		<szFacilityName>SAM Site</szFacilityName>
		<sSkyriderCostModifier>-100</sSkyriderCostModifier>
	</FACILITYTYPE>

<!--
	This XML creates new facilities for placement in the game (use Facilities.XML), and
	also adds many effects to existing game facilities.
-->

<FACILITYTYPES>
	<FACILITYTYPE>
		<ubIndex>1</ubIndex>
		<szFacilityName>Hospital</szFacilityName>
		<sMedicalTraining>25</sMedicalTraining>
		<sDoctor>25</sDoctor>
		<ubMinimumMedicalForDoctor>90</ubMinimumMedicalForDoctor>
	</FACILITYTYPE>
	<FACILITYTYPE>
		<ubIndex>2</ubIndex>
		<szFacilityName>Factory</szFacilityName>
		<sRepair>25</sRepair>
		<ubMinimumMechanicalForRepair>50</ubMinimumMechanicalForRepair>
		<ubMaxFatigue>80</ubMaxFatigue>
	</FACILITYTYPE>
	<FACILITYTYPE>
		<ubIndex>3</ubIndex>
		<szFacilityName>Prison</szFacilityName>
